<% include ../partials/header %>

  <form action="<%= fAction %>" method="POST">
    <p>
      <%= fQuestion %>
    </p>
    <p>
      <button id="yesButton" class="question-button inactive"><i class="fas fa-thumbs-up fa-4x"></i></button>
      <button id="noButton" class="question-button inactive"><i class="fas fa-thumbs-down fa-4x"></i></button>
    </p>
    <input id="yesNoToggle" type="checkbox" hidden name="<%= fValue %>">
    <div class="row">
      <div class="col s5 offset-s7">
        <button name="nextButton" class="btn waves-effect waves-light blue darken-3" type="submit">Next question</button>
      </div>
    </div>

  </form>

  <% include ../partials/footer %>

    <script>
      let checked = false
      $('#yesButton').click(function (e) {
        e.preventDefault();
        $('#yesNoToggle').checked = true
        checked = true;
        $('#yesButton').toggleClass('active');
        turnOffNoButton();
      })

      $('#noButton').click(function (e) {
        e.preventDefault();
        $('#yesNoToggle').checked = false
        checked = false
        $('#noButton').toggleClass('active');
        turnOffYesButton();
      })

      $('form').submit(function () {
        console.log("submit");
        localStorage.setItem("<%= fValue %>", checked)
      });

      function turnOffYesButton() {
        if ($('#yesButton').hasClass('active')) {
          $('#yesButton').toggleClass('active');
        }
      }

      function turnOffNoButton() {
        if ($('#noButton').hasClass('active')) {
          $('#noButton').toggleClass('active');
        }
      }


    </script>